<div  class="container mx-auto p-8">
  <div  class="overflow-x-auto">
    <table id="uitable" class="w-full table-auto border-collapse">
      <thead>
        <tr>
          <th class="px-2 py-2">Name</th>
          <th class="px-4 py-2">SKU</th>
          <th class="px-4 py-2">Size</th>
          <th class="px-4 py-2">Original Price</th>
          <th class="px-4 py-2">Price</th>
          <th class="px-4 py-2">Category ID</th>
          <th class="px-4 py-2">Supplier ID</th>
          <th class="px-4 py-2">Manage Stock</th>
          <th class="px-4 py-2">Stock</th>
          <th class="px-4 py-2">Marble ID</th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
        <tr class="border-b">
          <td class="px-4 py-2"><%= product.name %></td>
          <td class="px-4 py-2"><%= product.sku %></td>
          <td class="px-4 py-2"><%= product.size %></td>
          <td class="px-4 py-2"><%= product.original_price %></td>
          <td class="px-4 py-2"><%= product.price %></td>
          <td class="px-4 py-2"><%= product.category_id %></td>
          <td class="px-4 py-2"><%= product.supplier_id %></td>
          <td class="px-4 py-2"><%= product.manage_stock %></td>
          <td class="px-4 py-2"><%= product.stock %></td>
          <td class="px-4 py-2"><%= product.marble_id %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<script>
  $(document).ready(function(){
    var oTable = $("#uitable").DataTable({
      order: [[2, 'desc']]
    })
  })
</script>

